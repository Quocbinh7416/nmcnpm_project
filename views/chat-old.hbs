                            <div id="conversationId">{{conversationId}}</div>
                        </div>
                        <ul class="m-b-0">
                            {{#each messages}}
                            {{#if (equals role "user")}}
                            <li class="clearfix">
                                {{!-- <div class="message-data text-right">
                                    <span class="message-data-time">{{formatDate created}}</span>
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="avatar">
                                </div> --}}
                                <div class="message my-message"> {{content}}
                                    {{#if audioUrl}} <!-- Check if the message has an audio file -->
                                    <button class="btn btn-sm btn-primary play-audio" data-audio="{{audioUrl}}">
                                        <i class="fa fa-play"></i> Play
                                    </button>
                                    {{/if}}
                                </div>
                            </li>
                            {{else}}
                            <li class="clearfix">
                                {{!-- <div class="message-data">
                                    <span class="message-data-time">{{formatDate created}}</span>
                                </div> --}}
                                <div class="message other-message float-right">{{content}}

                                    {{#if audioUrl}} <!-- Check if the message has an audio file -->
                                    <button class="btn btn-sm btn-primary play-audio" data-audio="{{audioUrl}}">
                                        <i class="fa fa-play"></i> Play
                                    </button>
                                    {{/if}}
                                </div>
                            </li>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                    <div class="chat-message clearfix">
                        <div class="input-group mb-0">
                            <input type="text" class="form-control" placeholder="Enter text here..." name="chatMessage"
                                id="textInput">
                            <div class="input-group-prepend">
                                <button type="submit" class="input-group-text" id="sendTextBtn">
                                    <i class="fa fa-send"></i>
                                </button>
                            </div>
                            <div class="input-group-prepend">
                                <button id="recordBtn" class="record-button">
                                    <i class="fa fa-microphone" aria-hidden="true" id="recordIcon"></i>
                                    <span class="record-text" id="recordText"></span>
                                    <span class="record-timer" style="display: none;">00:00</span>
                                </button>
                                <button id="cancelRecordBtn" class="cancel-record-button" style="display: none;"><i
                                        class="fa fa-ban" aria-hidden="true"></i></button>
                            </div>
