<div class="main-layout d-flex">
    <!-- Sidebar -->
    <aside class="sidebar d-flex flex-column" id="sidebar">
        <div class="sidebar-header d-flex align-items-center justify-content-between p-3">
            <span class="sidebar-title fw-bold fs-4">Chatbot</span>
            <div class="d-flex align-items-center gap-2">
                <button class="btn btn-light btn-circle" id="new-chat-btn" title="Cuộc trò chuyện mới"><i
                        class="fa fa-plus"></i></button>
                <button class="btn btn-light btn-circle" id="toggle-sidebar-btn" title="Thu gọn/mở rộng"><i
                        class="fa fa-angle-left"></i></button>
            </div>
        </div>
        <div class="sidebar-history flex-grow-1 px-2" id="sidebar-history">
            <ul class="list-group list-group-flush" id="chat-history-list"></ul>
        </div>
        <div class="sidebar-footer p-3 d-flex align-items-center">
            <span class="user-status mx-2"><i class="fa fa-circle me-2 mx-2"
                    style="color: #ff9800;"></i>{{email}}</span>
            <span class="ms-auto"><i class="fa fa-chevron-up"></i></span>
        </div>
    </aside>
    <!-- Main chat -->
    <main class="chat-main flex-grow-1 d-flex flex-column">
        <div style="display: none;">
            <div id="userId">{{userId}}</div>
            <div id="conversationId">{{conversationId}}</div>
        </div>
        <div class="chat-content flex-grow-1 d-flex flex-column align-items-center justify-content-center"
            id="chat-content">
            <div class="welcome-message text-center" id="welcome-message">
                <h1 class="fw-bold mb-2">Hello there!</h1>
                <p class="fs-5 text-secondary mb-4">How can I help you today?</p>
                <div class="suggestions row row-cols-1 row-cols-md-2 g-3 justify-content-center" id="suggestions">
                    <div class="col"><button class="btn btn-suggestion w-100">How to improve English
                            speaking?</button></div>
                    <div class="col"><button class="btn btn-suggestion w-100">Tips for learning English
                            vocabulary</button></div>
                    <div class="col"><button class="btn btn-suggestion w-100">Common English grammar
                            mistakes</button></div>
                    <div class="col"><button class="btn btn-suggestion w-100">Best resources for English listening
                            practice</button></div>
                </div>
            </div>
            <div class="chat-body w-100 d-none flex-column px-0 px-md-5" id="chat-messages"></div>
        </div>
        <div class="chat-input-area p-3">
            <div id="suggestions-fixed" class="mb-2"></div>
            <div class="input-group rounded-pill shadow-sm">
                <button class="btn btn-link attach-btn" id="attach-btn" title="Đính kèm"><i
                        class="fa fa-paperclip"></i></button>
                <input type="text" id="user-input" class="form-control border-0" placeholder="Send a message...">
                <button class="btn btn-link" id="mic-btn" title="Nói"><i class="fa fa-microphone" aria-hidden="true"
                        id="recordIcon"></i></button>
                <button class="btn btn-link" id="send-btn" title="Gửi"><i class="fa fa-paper-plane"></i></button>
            </div>
        </div>
        
        <!-- Translation Area -->
        <div class="translation-area p-3 border-top">
            <div class="form-group">
                <label for="english-text" class="form-label">English Text</label>
                <textarea id="english-text" class="form-control" rows="4" placeholder="Enter or paste English text here..."></textarea>
            </div>
            <div id="translation-icon" class="translation-icon d-none">
                <i class="fa fa-language"></i>
            </div>
            <div id="translation-result" class="translation-result mt-2 d-none">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Translation</h5>
                        <p id="translated-text" class="card-text"></p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Back to Top -->
<a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

<!-- Add CSS for translation functionality -->
<style>
    .translation-area {
        position: relative;
    }
    
    #english-text {
        font-size: 16px;
        line-height: 1.6;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        resize: vertical;
    }
    
    #english-text::selection {
        background-color: #007bff;
        color: white;
    }
    
    .translation-icon {
        position: absolute;
        background-color: #007bff;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }
    
    .translation-icon:hover {
        transform: scale(1.1);
    }
    
    .translation-result {
        background-color: #f8f9fa;
        border-radius: 4px;
        padding: 10px;
    }
</style>

<!-- Add JavaScript for translation functionality -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const englishText = document.getElementById('english-text');
        const translationIcon = document.getElementById('translation-icon');
        const translationResult = document.getElementById('translation-result');
        const translatedText = document.getElementById('translated-text');
        
        // Handle text selection
        englishText.addEventListener('mouseup', function(e) {
            const selectedText = window.getSelection().toString().trim();
            
            if (selectedText) {
                // Get selection coordinates
                const selection = window.getSelection();
                const range = selection.getRangeAt(0);
                const rect = range.getBoundingClientRect();
                
                // Position translation icon
                translationIcon.style.top = `${rect.bottom + window.scrollY + 5}px`;
                translationIcon.style.left = `${rect.left + window.scrollX}px`;
                translationIcon.classList.remove('d-none');
                
                // Store selected text for translation
                translationIcon.dataset.text = selectedText;
            } else {
                translationIcon.classList.add('d-none');
            }
        });
        
        // Handle click outside to hide translation icon
        document.addEventListener('click', function(e) {
            if (!translationIcon.contains(e.target) && !englishText.contains(e.target)) {
                translationIcon.classList.add('d-none');
            }
        });
        
        // Handle translation icon click
        translationIcon.addEventListener('click', function() {
            const textToTranslate = this.dataset.text;
            if (textToTranslate) {
                // Show loading state
                translatedText.textContent = 'Translating...';
                translationResult.classList.remove('d-none');
                
                // Call translation API (to be implemented)
                // For now, just show a placeholder
                setTimeout(() => {
                    translatedText.textContent = `[Translation of: ${textToTranslate}]`;
                }, 500);
            }
        });
    });
</script>